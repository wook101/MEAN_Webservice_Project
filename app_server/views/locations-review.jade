extends layout

block content
  .row.page-header
    .col-lg-12
      h1 건대입구역 스타벅스 리뷰쓰기
  .row
    .col-xs-12.col-md-6
      form.form-horizontal(action="/api/location", method="get", role="form")
        .form-group
          label.col-xs-10.col-sm-2.control-label(for="name") 이름
          .col-xs-12.col-sm-10
            input#name.form-control(name="name")
        .form-group
          label.col-xs-10.col-sm-2.control-label(for="rating") 별점
          .col-xs-12.col-sm-2
            select#rating.form-control.input-sm(name="rating")
              option 5
              option 4
              option 3
              option 2
              option 1
        .form-group
          label.col-sm-2.control-label(for="review", rows="5") 리뷰
          .col-sm-10
            textarea#review.form-control(name="review", rows="5")
        button.btn.addReivewBtn.pull-right 리뷰 추가 
    .col-xs-12.col-md-4